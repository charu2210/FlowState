# notebooks/exploration.ipynb

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import glob
import os

# 1. Load Data
# We look one level up (..) to find the data folder
data_path = "../data/raw_logs/"
all_files = glob.glob(os.path.join(data_path, "*.csv"))

if not all_files:
    print("❌ No data found! Run src/logger.py and type for a while.")
else:
    print(f"✅ Found {len(all_files)} log files.")
    
    # Combine all sessions into one DataFrame
    df_list = [pd.read_csv(f) for f in all_files]
    df = pd.concat(df_list, ignore_index=True)
    
    # 2. Feature Engineering (The "Science")
    # We calculate the Rolling Standard Deviation (Variance)
    # This represents your "Rhythm Consistency"
    df['rolling_std'] = df['flight_time'].rolling(window=50).std()
    df['rolling_mean'] = df['flight_time'].rolling(window=50).mean()
    
    # 3. Visualization
    plt.figure(figsize=(15, 6))
    
    # Plot Raw Flight Times (The messy dots)
    plt.plot(df.index, df['flight_time'], 'o', markersize=2, alpha=0.3, label='Raw Keystroke', color='gray')
    
    # Plot The "Flow" (The smooth line)
    plt.plot(df.index, df['rolling_mean'], linewidth=2, color='blue', label='Typing Speed (Avg)')
    
    # Plot Fatigue/Stress (The Variance)
    # We multiply by 5 just to make it visible on the same scale
    plt.plot(df.index, df['rolling_std'] * 5, linewidth=2, color='red', label='Variance (Fatigue Indicator)')
    
    plt.title("Keystroke Dynamics: Flow vs. Fatigue")
    plt.xlabel("Keystroke Count")
    plt.ylabel("Time (seconds)")
    plt.legend()
    plt.grid(True, alpha=0.3)
    
    # Save the plot to show off in your README
    plt.savefig("dynamics_plot.png")
    plt.show()
    
    print("Graph generated! The 'Red Line' spiking indicates erratic typing (Cognitive Load).")